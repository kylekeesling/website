---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
    <channel>
        <title>{{ site.name }}</title>
        <link>{{ site.url }}</link>
        <description>
            {{ site.description | xml_escape }}
        </description>
        {% for post in site.posts limit:10 %}
            <item>
                {% if post.link %}
                    <title>{{ post.title | xml_escape }} â†’</title>
                    <link>{{ post.link | xml_escape }}</link>
                    <guid isPermaLink="false">{{ post.link | xml_escape }}</guid>
                {% else %}
                    <title>{{ post.title | xml_escape }}</title>
                    <link>{{ site.url }}{{ post.url }}</link>
                    <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
                {% endif %}

                <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
                <description>
                    {{ post.content | xml_escape }}
                    {% if post.link %}
                        {% capture post_permalink %}<p><a href="{{ site.url }}{{ post.url }}">Permalink &#8734;</a></p>{% endcapture %}
                        {{ post_permalink | xml_escape }}
                    {% endif %}
                </description>
            </item>
        {% endfor %}
    </channel>
</rss>