<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
{% capture page_title %}
  {{ title | strip_html | strip_newlines }}{% endcapture %}
<title>
  {% if page_title != "" %}
    {{ page_title | escape }} | {{ metadata.title | escape }}
  {% else %}
    {{ metadata.title
     | escape }}: {{ metadata.tagline | escape }}{% endif %}
</title>

<meta name="description" content="{{ metadata.description }}" />

<meta name="fediverse:creator" content="@kylekeesling@mastodon.social">

<link rel="stylesheet" href="{% webpack_path css %}" />

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-CSZY358CK3"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag('js', new Date());

  gtag('config', 'G-CSZY358CK3');
</script>

<script src="{% webpack_path js %}" defer></script>
